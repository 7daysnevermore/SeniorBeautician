<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#ffffff"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/pic_pro"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp"
            android:layout_centerVertical="true"
            android:foregroundGravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proName"
                android:layout_weight="1"
                android:layout_margin="5dp" />

            <TextView
                android:text="Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proType"
                android:layout_weight="1"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:id="@+id/proTopic"
            android:textColor="#FF424242"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"/>



        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proPrice"
            android:gravity="center"
            android:textColor="#FF424242"
            android:padding="5dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF424242"
            android:gravity="center"
            android:id="@+id/proSale"
            android:padding="5dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/proImg"
            android:src="@drawable/common_google_signin_btn_text_light_disabled"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"  />
        <TextView
            android:text="Date From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF424242"
            android:gravity="center"
            android:id="@+id/proDF"
            android:padding="5dp" />
        <TextView
            android:text="Date To"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF424242"
            android:gravity="center"
            android:id="@+id/proDT"
            android:padding="5dp" />
        <TextView
            android:text="Sub Topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proSubtopic"
            android:textSize="18dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp" />

    </LinearLayout>

</LinearLayout>