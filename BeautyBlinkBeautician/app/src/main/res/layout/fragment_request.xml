<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <HorizontalScrollView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnOffer"
                android:text="Offer"
                android:textStyle="bold"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textSize="14dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/btnTohire"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="To hire"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnToconfirm"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="To confirm"
                android:textSize="14dp"
                android:textStyle="bold" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTopay"
                android:text="To pay"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textStyle="bold"
                android:textSize="14dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/btnToprovide"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="To provide"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnToReview"
                android:text="To review"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textStyle="bold"
                android:textSize="14dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/btnCompleted"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="Completed"
                android:textSize="14dp"
                android:textStyle="bold" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:text="Cancel"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textStyle="bold"
                android:textSize="14dp"
                style="@style/Widget.AppCompat.Button.Colored"/>


        </LinearLayout>

    </HorizontalScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/create_pro"
        android:layout_alignParentStart="true" />


    <FrameLayout
        android:id="@+id/contentstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:background="@color/even_color">

    </FrameLayout>


</LinearLayout>
