<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nunepc.beautyblinkbeautician.MainActivity">

    <!--HomeMenu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="#1111">

            <TextView
                android:id="@+id/showname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="30dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:id="@+id/noti"/>

        </android.support.v7.widget.Toolbar>

        <!--Menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_request"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/request_702" />


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tap_req"
                    android:layout_alignBottom="@+id/bt_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_weight="1"
                    android:src="@mipmap/camera_703" />


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tap_gal"
                    android:layout_alignBottom="@+id/bt_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab2"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_planner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/calendar_702" />


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tap_plan"
                    android:layout_alignBottom="@+id/bt_planner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/top"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bt_noti"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:src="@mipmap/noti_702"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/family_hub_tv_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/red_circle"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_marginRight="12dp" />

                </RelativeLayout>


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tap_noti"
                    android:layout_alignBottom="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab2"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bt_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/setting_703" />


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tap_set"
                    android:layout_alignBottom="@+id/bt_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab2"
                    />

            </RelativeLayout>


        </LinearLayout>

        <!--Fragment-->
        <FrameLayout
            android:id="@+id/contentcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15">

        </FrameLayout>

    </LinearLayout>

    <!--Menu-->

    <LinearLayout
        android:layout_width="@dimen/drawer_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:orientation="vertical">


    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
